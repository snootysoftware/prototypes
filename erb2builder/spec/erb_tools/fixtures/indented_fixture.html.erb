
<h1>
  Posts
</h1>
<table>
  <thead>
    <tr>
      <th>
        Title
      </th>
      <th>
        Writer
      </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <% if post %>
            <%= link_to(post.title, post) %>
          <% else %>
            <%= link_to(post.title, post) %>
          <% end %>
        </td>
        <td>
          <%= post.author %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>